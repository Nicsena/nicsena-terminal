<!DOCTYPE html>
<html>
<body>
  
  <title>Terminal</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="/favicon.png"/>

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inconsolata">
<script src="https://code.jquery.com/jquery-3.5.0.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<style>

  html, body {
    height:100%;
    margin: 0px;
    color: #ffffff;
}

.page {
  height: 100%;
  margin-top:0;
  background-color: #181B18;
  font-family: "Inconsolata";
}

.page form {
  position:absolute;
   bottom:0;
   width:100%;
   margin-bottom: 0px!important;
}

  .page embed {
position:fixed; 
top:0; 
left:0; 
bottom:0; 
right:0; 
width:100%;
height:100%; 
border:none;
margin:0;
padding:0;
  }

</style>

<script>

  $(document).on('submit', '#runform', function(event){
  
    event.preventDefault();
    
    run();
    
});

function run() {
  if (document.runform.command.value === null || document.runform.command.value === "") {
    var command = document.runform.command.value.toLowerCase();
    window.frames['output'].location.replace("/output?program=blank");
  } else {
    var command = document.runform.command.value.toLowerCase();
    window.frames['output'].location.replace("/output?program=" +command +"");  
    document.runform.command.value = "";
  };
};
  
</script>

<div class="page">
  
  <div class="runoutput">
    <embed id="output" name="output" src="./welcome"></embed>
  </div>

  <form id="runform" name="runform">
    <div class="input-group input-group-med mb-0">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-med"><%= user%>@<%=term_name %> $</span>
        </div>
        <input type="text" placeholder="Enter a command here" name="command" id="command" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
      </div>
    </form>

</div>

</body>
</html>
